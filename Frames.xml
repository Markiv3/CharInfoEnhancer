<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Frame name="CharInfoEnhancerOptionFrame">
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" text="CharInfoEnhancer_OPTION_TITLE" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="16" y="-16"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentSubText" text="CharInfoEnhancer_OPTION_SUBTEXT" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
					<Size>
						<AbsDimension y="32" x="0"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-8"/>
							</Offset>
						</Anchor>
						<Anchor point="RIGHT">
							<Offset>
								<AbsDimension x="-32" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="$parentTooltipInspect" parentKey="TooltipInspect" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSubText" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="-2" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText(CharInfoEnhancer_OPTION_TOOLTIPINSPECT)
					</OnLoad>
					<OnClick>
						CharInfoEnhancerOption.TooltipInspect = self:GetChecked()
					</OnClick>
				</Scripts>
			</CheckButton>	
			<CheckButton name="$parentStatPrecision" parentKey="StatPrecision" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTooltipInspect" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText(CharInfoEnhancer_OPTION_STATPRECISION)
					</OnLoad>
					<OnClick>
						CharInfoEnhancerOption.StatPrecision = self:GetChecked()
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentAvgItemLevelPrecision" parentKey="AvgItemLevelPrecision" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentStatPrecision" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText(CharInfoEnhancer_OPTION_AVGITEMLEVELPRECISION)
					</OnLoad>
					<OnClick>
						CharInfoEnhancerOption.AvgItemLevelPrecision = self:GetChecked()
					</OnClick>
				</Scripts>
			</CheckButton>		
			<CheckButton name="$parentItemLevelQualityColor" parentKey="ItemLevelQualityColor" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentAvgItemLevelPrecision" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText(CharInfoEnhancer_OPTION_ITEMLEVELQUALITYCOLOR)
					</OnLoad>
					<OnClick>
						CharInfoEnhancerOption.ItemLevelQualityColor = self:GetChecked()
					</OnClick>
				</Scripts>
			</CheckButton>	
		</Frames>		
		<Scripts>
			<OnLoad>
				self.name = CharInfoEnhancer_OPTION_TITLE
				InterfaceOptions_AddCategory(self)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>